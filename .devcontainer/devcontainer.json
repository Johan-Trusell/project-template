{
  "name": "JARVIS Dev Environment",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:1-20-bullseye",
  
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers-contrib/features/typescript:2": {}
  },

  "customizations": {
    "vscode": {
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "typescript.preferences.importModuleSpecifier": "relative",
        "files.eol": "\n",
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true
      },
      "extensions": [
        "esbenp.prettier-vscode",
        "dbaeumer.eslint",
        "editorconfig.editorconfig",
        "eamodio.gitlens",
        "mhutchie.git-graph",
        "bradlc.vscode-tailwindcss",
        "formulahendry.auto-rename-tag",
        "christian-kohler.path-intellisense",
        "streetsidesoftware.code-spell-checker",
        "gruntfuggly.todo-tree",
        "usernamehw.errorlens",
        "yzhang.markdown-all-in-one",
        "github.github-vscode-theme"
      ]
    }
  },

  "forwardPorts": [3000, 5173, 8080, 4000],
  "portsAttributes": {
    "3000": { "label": "App", "onAutoForward": "notify" },
    "5173": { "label": "Vite Dev", "onAutoForward": "notify" },
    "8080": { "label": "Preview", "onAutoForward": "notify" },
    "4000": { "label": "API/MCP", "onAutoForward": "notify" }
  },

  "postCreateCommand": "npm install && npm run setup || true",
  "postStartCommand": "echo 'Dev environment ready!'",

  "containerEnv": {
    "NODE_ENV": "development",
    "EDITOR": "code --wait"
  },

  "mounts": [
    "source=${localWorkspaceFolderBasename}-node_modules,target=${containerWorkspaceFolder}/node_modules,type=volume"
  ],

  "remoteUser": "node"
}
